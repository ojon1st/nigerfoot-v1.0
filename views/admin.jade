doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no')
    title Mon Profil
    meta(name='description', content='Nigerfoot est un site de pronostics gratuit')
    meta(name='keywords', content='Niger, niger, digital, niger digital, pronostics, football, foot, cm18, coupe du monde, 2018')
    meta(name='NIGER DIGITAL', content='hencework')
    // Favicon
    link(rel='shortcut icon', href='favicon.ico')
    link(rel='icon', href='favicon.ico', type='image/x-icon')
    // Jasny-bootstrap CSS
    link(href='/vendors/bower_components/jasny-bootstrap/dist/css/jasny-bootstrap.min.css', rel='stylesheet', type='text/css')
    // Bootstrap Datetimepicker CSS
    link(href='/vendors/bower_components/eonasdan-bootstrap-datetimepicker/build/css/bootstrap-datetimepicker.min.css', rel='stylesheet', type='text/css')

    // Custom CSS
    link(href='/dist/css/style.css', rel='stylesheet', type='text/css')
  body
    // Preloader
    .preloader-it
      .la-anim-1
    // /Preloader
    .wrapper.theme-1-active.pimary-color-red
      // Top Menu Items
      nav.navbar.navbar-inverse.navbar-fixed-top
        .pull-left.mt-10.ml-50
          a(href='/')
            img.brand-img(src='/dist/img/logo.png', alt='brand')
            span.brand-text NIGER FOOT
        .pull-right.mt-10
          //button.btn.btn-success Valider mes pronostics
          a.button.btn.btn-warning.ml-50(href='/logout') Déconnexion
      // /Top Menu Items
      // Main Content
      .page-wrapper
        .container-fluid
          // Title
          .row.heading-bg
            .col-lg-12.col-md-12.col-sm-12.col-xs-12
              h5.txt-dark Créer et Mettre à jour les Matches
          // /Title
          // Row
          .row
            .col-sm-12
              .panel.panel-default.card-view
                .panel-heading
                  .pull-left
                    h6.panel-title.txt-dark Formulaire
                  .clearfix
                .panel-wrapper.collapse.in
                  .panel-body
                    .form-wrap
                      if errors
                        ul
                          each error in erros
                            li #{error}
                      form(method='POST' action='')
                        .form-group.col-md-2.col-sm-2
                          label.control-label.mb-10.text-left Game Number 
                          input.form-control(type='number', min='1', max='64', name='gamenumber' value=(undefined===game ? '' : game.gamenumber))
                        .form-group.col-md-2.col-sm-2
                          label.control-label.mb-10.text-left Game Type 
                          
                          select.form-control(type='select', name='gametype' required='true' )
                              if game
                                option(value='32' selected=('32'==game.gametype.toString() ? 'selected' : false)) 32
                                option(value='16' selected=('16'==game.gametype.toString() ? 'selected' : false)) 16
                                option(value='4' selected=('4'==game.gametype.toString() ? 'selected' : false)) 4
                                option(value='2' selected=('2'==game.gametype.toString() ? 'selected' : false)) 2
                                option(value='3' selected=('3'==game.gametype.toString() ? 'selected' : false)) 3
                                option(value='1' selected=('1'==game.gametype.toString() ? 'selected' : false)) 1
                              else
                                option(value='32') 32
                                option(value='16') 16
                                option(value='4') 4
                                option(value='2') 2
                                option(value='3') 3
                                option(value='1') 1
                          
                        .form-group.col-md-2.col-sm-2
                          label.control-label.mb-10.text-left Team1
                          select.form-control(type='select', name='team1' required='true')
                              for team in teams
                                if game
                                  option(value=team._id selected=(team._id.toString()==game.team1.toString() ? 'selected' : false) ) #{team.teamname}
                                else
                                  option(value=team._id) #{team.teamname}
                        .form-group.col-md-2.col-sm-2
                          label.control-label.mb-10.text-left RTeam1
                          input.form-control(type='number', min='0', max='15', name='rteam1' value=(undefined===game ? '0' : game.rteam1))
                        .form-group.col-md-2.col-sm-2
                          label.control-label.mb-10.text-left Team2
                          select.form-control(type='select', name='team2' required='true')
                              for team in teams
                                if game
                                  option(value=team._id selected=(team._id.toString()==game.team2.toString() ? 'selected' : false) ) #{team.teamname}
                                else
                                  option(value=team._id) #{team.teamname}
                        .form-group.col-md-2.col-sm-2
                          label.control-label.mb-10.text-left RTeam2
                          input.form-control(type='number', min='0', max='15', name='rteam2' value=(undefined===game ? '0' : game.rteam2))
                        .form-group.col-md-2.col-sm-2
                          label.control-label.mb-10.text-left Game Date
                          #datetimepicker1.input-group.date
                            input.form-control(type='text' name='gamedate' value=(undefined===game ? '' : game.gamedate))
                            span.input-group-addon
                              span.fa.fa-calendar
                        .form-group.col-md-2.col-sm-2
                          label.control-label.mb-10.text-left Game Stadium
                          select.form-control(type='select' name='gamestadium')
                            option(value='Luzhniki Stadium') Luzhniki Stadium
                            option(value='Otkrytiye Arena') Otkrytiye Arena
                            option(value='Krestovsky Stadium') Krestovsky Stadium
                            option(value='Kaliningrad Stadium') Kaliningrad Stadium
                            option(value='Kazan Arena') Kazan Arena
                            option(value='Nizhny Novgorod Stadium') Nizhny Novgorod Stadium
                            option(value='Cosmos Arena') Cosmos Arena
                            option(value='Volgograd Arena') Volgograd Arena
                            option(value='Volgograd Arena') Volgograd Arena
                            option(value='Rostov Arena') Rostov Arena
                            option(value='Fisht Olympic Stadium') Fisht Olympic Stadium
                            option(value='Central Stadium') Central Stadium
                        .form-group.col-md-2.col-sm-2
                          label.control-label.mb-10.text-left Game Place 
                          select.form-control(type='select' name='gameplace')
                            option(value='Moscow') Moscow
                            option(value='Saint Petersburg') Saint Petersburg
                            option(value='Kaliningrad') Kaliningrad
                            option(value='Kazan') Kazan
                            option(value='Nizhny Novgorod') Nizhny Novgorod
                            option(value='Samara') Samara
                            option(value='Volgograd') Volgograd
                            option(value='Saransk') Saransk
                            option(value='Rostov-on-Don') Rostov-on-Don
                            option(value='Sochi') Sochi
                            option(value='Yekaterinburg') Yekaterinburg
                        .form-group.col-md-2.col-sm-2
                          label.control-label.mb-10.text-left Started
                          select.form-control(type='select' name='started')
                            if game
                              option(value='true' selected =('true'===game.started.toString() ? 'selected': false)) True
                              option(value='false' selected =('false'===game.started.toString() ? 'selected': false)) False
                            else
                              option(value='true') True
                              option(value='false') False
                        button.btn.btn-success.ml-15.mr-10.mt-100.col-sm-2.col-xs-12(type='submit') Valider
                        button.btn.btn-default.mt-100.col-sm-2.col-xs-12(type='cancel') Annuler
          // /Row
        // Footer
        footer.footer.container-fluid.pl-30.pr-30
          .row
            .col-sm-12
              p 2017 © Hound. Pampered by Hencework
        // /Footer
      // /Main Content
    // /#wrapper
    // JavaScript
    // jQuery
    script(src='/vendors/bower_components/jquery/dist/jquery.min.js')
    // Bootstrap Core JavaScript
    script(src='/vendors/bower_components/bootstrap/dist/js/bootstrap.min.js')
    script(src='/vendors/bower_components/jasny-bootstrap/dist/js/jasny-bootstrap.min.js')
    // Slimscroll JavaScript
    script(src='/dist/js/jquery.slimscroll.js')
    // Fancy Dropdown JS
    script(src='/dist/js/dropdown-bootstrap-extended.js')
    // Owl JavaScript
    script(src='/vendors/bower_components/owl.carousel/dist/owl.carousel.min.js')
    // Moment JavaScript
    script(type='text/javascript', src='/vendors/bower_components/moment/min/moment-with-locales.min.js')
    // Bootstrap Datetimepicker JavaScript
    script(type='text/javascript', src='/vendors/bower_components/eonasdan-bootstrap-datetimepicker/build/js/bootstrap-datetimepicker.min.js')
    // Form Picker Init JavaScript
    script(src='dist/js/form-picker-data.js')
    // Switchery JavaScript
    script(src='/vendors/bower_components/switchery/dist/switchery.min.js')
    // Init JavaScript
    script(src='/dist/js/init.js')
